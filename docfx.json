{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "src/Helldivers-2-Models/json/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "docs/openapi/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Helldivers-2 API",
      "_appTitle": "Helldivers-2 API",
      "_enableSearch": true,
      "pdf": false
    }
  }
}
