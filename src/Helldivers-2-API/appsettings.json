{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Helldivers": "Trace",
      "System.Net.Http.HttpClient": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Trace"
    }
  },
  "AllowedHosts": "*",
  "Helldivers": {
    "API": {
      "RateLimit": 5,
      "RateLimitWindow": 10,
      "Authentication": {
        "ValidIssuers": ["dealloc"],
        "ValidAudiences": [
          "https://api.helldivers2.dev"
        ]
      }
    },
    "Synchronization": {
      "IntervalSeconds": 20,
      "DefaultLanguage": "en-US",
      "Languages": [
        "en-US",
        "de-DE",
        "es-ES",
        "ru-RU",
        "fr-FR",
        "it-IT",
        "pl-PL",
        "zh-Hans",
        "zh-Hant"
      ]
    }
  }
}
